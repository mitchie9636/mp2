<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title ? locals.title : 'Foodies' %></title>
    <link rel="icon" type="image/x-icon" href="/static/assets/favicon.ico">  
    <link rel="stylesheet" href="/static/style.css"> 
                    



</head>
<body>



<!-----login section starts-->
<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
           <h2 class="font-weight-bold">
            Foodies App
           </h2>
            <span class="label">
            Login for the existing user
        </span>
        <% if(locals.logout) {%>
            <div class="alert alert-success text-center">
                <%= logout%>
            </div>
        <%}%>
        </div>

    <form action="/login" method="POST">
        <div class="form-group">
            <input type="email" placeholder="email" class="form-control" value="kodego@test.com" name="email">
        </div>
        <br>
        <div class="form-group">
            <input type="password" placeholder="password" class="form-control" value="12345678" name="password">
        </div>
        <br>
         <button type="submit" class="btn btn-success rounded-pill">Submit</button>
       
    </form>
    <br>
     <% if(locals.errors) {%>
            <div class="alert alert-danger text-center">
                <%= errors%>
            </div>
        <%}%>
         <% if(locals.isInvalid) {%>
            <div class="alert alert-danger text-center">
                <%= isInvalid%>
            </div>
        <%}%>
      </div>
</div>
<!-----login section ends-->

<footer class="footer">
   
    <div class="credit">&copy; copyright @ 2023 by <span>TOS</span> | all rights reserved!</div>
</footer>



 <!--custom js file link-->
 <script>
    // Function to toggle password visibility
    function togglePassword(inputId) {
        const passwordInput = document.getElementById(inputId);
        const passwordIcon = document.getElementById(inputId + "-icon");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            passwordIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
        } else {
            passwordInput.type = "password";
            passwordIcon.innerHTML = '<i class="fas fa-eye"></i>';
        }
    }
</script>

<script src="/static/login.js"></script>

</body>
</html>